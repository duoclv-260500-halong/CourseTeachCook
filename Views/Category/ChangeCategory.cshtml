@{
  ViewData["Title"] = "Thông tin cá nhân";
}

<head>
  <link rel="stylesheet" href="~/css/changeCourse.css?v=1" />
</head>
@using System;
@using CourseTeachCook.Models;
@using System.Collections.Generic;
@using System.Linq;

 
  <div class="right-body col-lg-10">
    <div class="content-body">
      <h4>Cập nhật tên danh mục</h4>
      @using (var system = new CourseTeachCookContext())
      {
        int id = ViewBag.id;
        Category category = new Category();
        category = category.GetCategory(id);
        <div class="row" id="head">
          
          <form asp-controller="Category" asp-action="ChangeCategory" asp-route-id="@category.CategoryId"
          method="POST" enctype="multipart/form-data">
            <div id="content">
              <div class="row content" id="email">
                <p class="col-lg-2">Danh mục</p>
                <p class="col-lg-4 detail">@category.CategoryName</p>
              </div>
              <div class="row content" id="email">
                <p class="col-lg-2">Tên mới</p>
                <input type="text" name="categoryName" class="detail" placeholder="Nhập tên danh mục">
              </div>
              @if (ViewBag.result != null)
              {
                @if (ViewBag.result.Equals(true))
                {
                  <div class="row content">
                    <p class="col-lg-2"></p>
                    <button class="result col-lg-3 btn btn-success">Đổi tên danh mục thành công</button>
                  </div>
                }
                else
                {
                  <div class="row content">
                    <p class="col-lg-2"></p>
                    <button class="result col-lg-3 btn btn-danger">Đổi tên danh mục thất bại</button>
                  </div>
                }
              }
              <div class="submitForm">
                <input type="submit" value="Lưu thông tin">
              </div>

            </div>
          </form>
        </div>

      }


    </div>
  </div>
