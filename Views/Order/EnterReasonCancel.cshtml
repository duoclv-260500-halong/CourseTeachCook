@{
  ViewData["Title"] = "Thông tin cá nhân";
}

<head>
  <link rel="stylesheet" href="~/css/changeName.css?v=5" />
</head>
@using System;
@using CourseTeachCook.Models;
@using System.Collections.Generic;
@using System.Linq;


  <div class="right-body col-lg-10">
    <div class="content-body">
      <h4>Nhập lí do hủy đơn</h4>
      @using (var system = new CourseTeachCookContext())
      {
        Order order = ViewBag.order;
        <div class="row" id="head">
          
          <form class="col-lg-10" asp-controller="Order" asp-action="CancelOrder" asp-route-id="@order.OrderId"
          method="POST" enctype="multipart/form-data">
            <div id="content">
              <div class="row content" id="email">
                <p class="col-lg-2">Mã hóa đơn</p>
                <p class="col-lg-4 detail">@order.OrderId</p>
              </div>
              <div class="row content" id="email">
                <p class="col-lg-2">Lí do hủy đơn</p>
                <input type="text" name="reason" class="detail" placeholder="Nhập lí do hủy đơn">
                
              </div>
              @if (ViewBag.result != null)
              {
                @if (ViewBag.result.Equals(true))
                {
                  <div class="row content">
                    <p class="col-lg-2"></p>
                    <button class="result col-lg-3 btn btn-success">Hủy đơn thành công</button>
                  </div>
                }
                else
                {
                  <div class="row content">
                    <p class="col-lg-2"></p>
                    <button class="result col-lg-3 btn btn-danger">Hủy đơn thất bại</button>
                  </div>
                }
              }
              <div class="submitForm">
                <input type="submit" value="Xác nhận hủy">
              </div>

            </div>
          </form>
        </div>

      }


    </div>
  </div>
