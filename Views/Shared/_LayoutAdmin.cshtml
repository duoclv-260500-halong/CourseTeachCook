@using CourseTeachCook.Models
@using Microsoft.AspNetCore.Http;
@model CourseTeachCook.Models.Order;
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CourseTeachCook</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/layout.css?v=8" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6" crossorigin="anonymous">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.3/css/all.css"
        integrity="sha384-SZXxX4whJ79/gErwcOYf+zWLeJdY/qpuqC4cAa9rOGUstPomtqpuNWT9wdPEn2fk" crossorigin="anonymous">
</head>

<body>
    <header>
        <div class="header">
            <div class="contain-header" style="display: flex;">
                <div class="left-header col-lg-2" style="display: flex; background-color: #000000;">
                    <img src="/Image/ImageDesign/AdminDesign/Logo.png" alt=""
                        style="width: 40%; height: 65%; margin-top:10%; margin-left: 33%">
                </div>
                <div class="right-header col-lg-10" style="background-color: #101010; display: flex; color: white">
                    <h3 class="col-lg-10" style="margin-top:2.5%">Quản trị viên</h3>
                    <div class="col-lg-2" style="display: flex; margin-top: 3%; margin-left: 20px">
                        <i class="fas fa-user" style="margin-top: 5px; font-size: 110%"></i>
                        @if (Context.Session.GetString("adminName") != null)
                        {
                            <div class="dropdown">
                                <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton1"
                                data-bs-toggle="dropdown" aria-expanded="false" style="background-color: #101010 !important">
                                    @Context.Session.GetString("adminName")
                                </button>
                                <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton1">

                                    <li><a class="dropdown-item" asp-controller="Admin"
                                        asp-action="ViewPersonalInformation"><i class="fas fa-user-circle"></i>
                                            Thông tin cá nhân</a>
                                    </li>
                                    <li><a class="dropdown-item" asp-controller="Admin" asp-action="ChangePassword"><i
                                            class="fas fa-key"></i>
                                            Đổi mật khẩu</a>
                                    </li>
                                    <li><a class="dropdown-item" asp-controller="Admin" asp-action="Logout"><i
                                            class="fas fa-sign-out-alt"></i>
                                            Đăng xuất</a>
                                    </li>
                                </ul>
                            </div>

                        }
                        else
                        {
                            <a id="login1" style="color: white; text-decoration: none; margin-top: 3px; margin-left: 15px"
                            href="/Admin/LoginAdmin">Đăng nhập</a>
                        }
                    </div>
                </div>
            </div>
        </div>
    </header>

    <div class="body" style="height: 100%; display: flex; background-color: #273444">
        <div class="left-body col-lg-2">
            <div class="accordion" id="accordionExample">
                <div class="accordion-item" style="border-top: none">
                    <h2 class="accordion-header" id="headingOne">
                        <button class="accordion-button" type="button" data-bs-toggle="collapse"
                            data-bs-target="" aria-expanded="" aria-controls=""
                            style="background-color: #17283e">
                            <div id="top-menu-left">
                                <img src="/Image/ImageDesign/AdminDesign/@Context.Session.GetString("adminImage")" alt="">
                                <p>@Context.Session.GetString("adminName")</p>

                            </div>
                        </button>
                    </h2>
                   

                </div>
                <div class="accordion-item" style="border-top: none">
                    <h2 class="accordion-header" id="headingOne">
                        <button class="accordion-button" type="button" data-bs-toggle="collapse"
                            data-bs-target="#collapseOne" aria-expanded="false" aria-controls="collapseOne"
                            style="background-color: #19232f">
                            <i class="fas fa-signal"></i>
                            <p>Thống kê</p>
                            <i class="fas fa-chevron-down"></i>
                        </button>
                    </h2>
                    <div id="collapseOne" class="accordion-collapse collapse" aria-labelledby="headingOne"
                        data-bs-parent="#accordionExample" style="background-color: rgb(73,96,123)">
                        <a asp-controller="Admin" asp-action="Index" style="color: white">
                            <div class="accordion-body">

                                <i class="fas fa-signal"></i>
                                Xem thống kê
                            </div>
                        </a>
                    </div>

                </div>
                <div class="accordion-item">
                    <h2 class="accordion-header" id="headingTwo">
                        <button class="accordion-button" type="button" data-bs-toggle="collapse"
                            data-bs-target="#collapseTwo" aria-expanded="false" aria-controls="collapseTwo"
                            style="background-color: #19232f">
                            <i class="fas fa-users"></i>
                            <p>Nhân viên</p>
                            <i class="fas fa-chevron-down"></i>
                        </button>
                    </h2>
                    <div id="collapseTwo" class="accordion-collapse collapse" aria-labelledby="headingTwo"
                        data-bs-parent="#accordionExample" style="background-color: rgb(73,96,123)">
                        <a asp-controller="Staff" asp-action="ViewStaffs" style="color: white">
                            <div class="accordion-body">

                                <i class="fas fa-users"></i>
                                Danh sách
                            </div>
                        </a>
                    </div>
                    <div id="collapseTwo" class="accordion-collapse collapse" aria-labelledby="headingTwo"
                        data-bs-parent="#accordionExample" style="background-color: rgb(73,96,123)">
                        <a asp-controller="Staff" asp-action="AddStaff" style="color: white">
                            <div class="accordion-body">

                                <i class="fas fa-user-plus"></i>
                                Thêm nhân viên
                            </div>
                        </a>
                    </div>
                </div>
                <div class="accordion-item">
                    <h2 class="accordion-header" id="headingNine">
                        <button class="accordion-button" type="button" data-bs-toggle="collapse"
                            data-bs-target="#collapseNine" aria-expanded="false" aria-controls="collapseNine"
                            style="background-color: #19232f; color:white;">
                            <i class="fas fa-user"></i>
                            <p>Khách hàng</p>
                            <i class="fas fa-chevron-down"></i>
                        </button>
                    </h2>
                    <div id="collapseNine" class="accordion-collapse collapse" aria-labelledby="headingNine"
                        data-bs-parent="#accordionExample" style="background-color: rgb(73,96,123)">
                        <a asp-controller="Customer" asp-action="ViewCustomers" style="color: white">
                            <div class="accordion-body">

                                <i class="fas fa-user"></i>
                                Danh sách
                            </div>
                        </a>
                    </div>
                </div>
              
                <div class="accordion-item">
                    <h2 class="accordion-header" id="headingThree">
                        <button class="accordion-button" type="button" data-bs-toggle="collapse"
                            data-bs-target="#collapseThree" aria-expanded="false" aria-controls="collapseThree"
                            style="background-color: #19232f">
                            <i class="fas fa-book-reader"></i>
                            <p>Khóa học</p>
                            <i class="fas fa-chevron-down"></i>
                        </button>
                    </h2>
                    <div id="collapseThree" class="accordion-collapse collapse" aria-labelledby="headingThree"
                        data-bs-parent="#accordionExample" style="background-color: rgb(73,96,123)">
                        <a asp-controller="Course" asp-action="ViewCourses" style="color: white">
                            <div class="accordion-body">

                                <i class="fas fa-book-reader"></i>
                                Danh sách
                            </div>
                        </a>
                    </div>
                    <div id="collapseThree" class="accordion-collapse collapse" aria-labelledby="headingThree"
                        data-bs-parent="#accordionExample" style="background-color: rgb(73,96,123)">
                        <a asp-controller="Course" asp-action="AddCourse" style="color: white">
                            <div class="accordion-body">

                                <i class="fas fa-chalkboard-teacher"></i>
                                Thêm khóa học
                            </div>
                        </a>
                    </div>
                </div>
                <div class="accordion-item">
                    <h2 class="accordion-header" id="headingFour">
                        <button class="accordion-button" type="button" data-bs-toggle="collapse"
                            data-bs-target="#collapseFour" aria-expanded="false" aria-controls="collapseFour"
                            style="background-color: #19232f">
                            <i class="fas fa-calendar-week"></i>
                            <p>Danh mục</p>
                            <i class="fas fa-chevron-down"></i>
                        </button>
                    </h2>
                    <div id="collapseFour" class="accordion-collapse collapse" aria-labelledby="headingFour"
                        data-bs-parent="#accordionExample" style="background-color: rgb(73,96,123)">
                        <a asp-controller="Category" asp-action="ViewCategories" style="color: white">
                            <div class="accordion-body">

                                <i class="fas fa-calendar-week"></i>
                                Danh sách
                            </div>
                        </a>
                    </div>
                </div>
                <div class="accordion-item">
                    <h2 class="accordion-header" id="headingFive">
                        <button class="accordion-button" type="button" data-bs-toggle="collapse"
                            data-bs-target="#collapseFive" aria-expanded="false" aria-controls="collapseFive"
                            style="background-color: #19232f; color:white;">
                            <i class="fas fa-file-invoice-dollar"></i>
                            <p>Đăng kí học</p>@{ using(var system = new CourseTeachCookContext()){
                                Order order = new Order();
                                if (system.Orders.Where(o => (o.OrderStatus == -1) || (o.OrderStatus == 0)).ToList().Count() > 0)
                                {
                                    <span style="color: red;" class="notify">@(system.Orders.Where(o => (o.OrderStatus == -1) || (o.OrderStatus == 0)).ToList().Count())</span>
                                }
                            }}
                            <i class="fas fa-chevron-down"></i>
                        </button>
                    </h2>
                    <div id="collapseFive" class="accordion-collapse collapse" aria-labelledby="headingFive"
                        data-bs-parent="#accordionExample" style="background-color: rgb(73,96,123)">
                        <a asp-controller="Order" asp-action="ViewOrdersProcessing" style="color: white">
                            <div class="accordion-body">

                                <i class="fas fa-file-invoice"></i>
                                Đang chờ xử lí
                                @{ using (var system = new CourseTeachCookContext()){
                                    if (system.Orders.Where(o => (o.OrderStatus == -1) || (o.OrderStatus == 0)).ToList().Count() > 0)
                                    {
                                        <span style="color: red;"
                                        class="notify">@(system.Orders.Where(o => (o.OrderStatus == -1) || (o.OrderStatus == 0)).ToList().Count())</span>
                                    }
                                }}
                            </div>
                        </a>
                    </div>
                    <div id="collapseFive" class="accordion-collapse collapse" aria-labelledby="headingFive"
                        data-bs-parent="#accordionExample" style="background-color: rgb(73,96,123)">
                        <a asp-controller="Order" asp-action="ViewOrdersDone" style="color: white">
                            <div class="accordion-body">

                                <i class="fas fa-clipboard-check"></i>
                                Đã hoàn thành
                            </div>
                        </a>
                    </div>
                    <div id="collapseFive" class="accordion-collapse collapse" aria-labelledby="headingFive"
                        data-bs-parent="#accordionExample" style="background-color: rgb(73,96,123)">
                        <a asp-controller="Order" asp-action="ViewOrdersCanceled" style="color: white">
                            <div class="accordion-body">

                                <i class="fas fa-window-close"></i>
                                Đã hủy
                            </div>
                        </a>
                    </div>
                </div>
            </div>
        </div>
        @RenderBody()
    </div>


    <!--<footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2021 - CourseTeachCook - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-JEW9xMcG8R+pH31jmWH6WWP0WintQrMb4s7ZOdauHnUtxwoG2vI5DkLtS3qm9Ekf"
        crossorigin="anonymous"></script>
</body>

</html>
