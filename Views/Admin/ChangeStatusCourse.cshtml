@{
  ViewData["Title"] = "Thông tin cá nhân";
}

<head>
  <link rel="stylesheet" href="~/css/changeCourse.css?v=1" />
</head>
@using System;
@using CourseTeachCook.Models;
@using System.Collections.Generic;
@using System.Linq;

 
  <div class="right-body col-lg-10">
    <div class="content-body">
      <h4>Cập nhật trạng thái</h4>
      @using (var system = new CourseTeachCookContext())
      {
          
          Course course = new Course();
          course = ViewBag.course;
        <div class="row" id="head">
          
          <form asp-controller="Admin" asp-action="ChangeStatusCourse" asp-route-id="@course.CourseId"
          method="POST" enctype="multipart/form-data">
            <div id="content">
              <div class="row content" id="email">
                <p class="col-lg-2">Khóa học</p>
                <p class="col-lg-4 detail">@course.CourseName</p>
              </div>
              <div class="row content" id="email">
                <p class="col-lg-2">Trạng thái mới</p>
                <select class="col-lg-5" name="status" id="status" style="background-color: #101010; color: white; border:none; width: 40.5%; outline: none;">
                        
                            <option value="1">Hoạt động</option>
                            <option value="0">Ngừng hoạt động</option>
                                                  
                        </select>
              </div>
              @if (ViewBag.result != null)
              {
                @if (ViewBag.result.Equals(true))
                {
                  <div class="row content">
                    <p class="col-lg-2"></p>
                    <button class="result col-lg-3 btn btn-success">Đổi trạng thái thành công</button>
                  </div>
                }
                else
                {
                  <div class="row content">
                    <p class="col-lg-2"></p>
                    <button class="result col-lg-3 btn btn-danger">Đổi trạng thái thất bại</button>
                  </div>
                }
              }
              <div class="submitForm">
                <input type="submit" value="Lưu thông tin">
              </div>
                @if(ViewBag.result != null){
                    ViewBag.result = null;
                }
            </div>
          </form>
        </div>

      }


    </div>
  </div>
