@{
    ViewData["Title"] = "Thông tin cá nhân";
}

<head>
    <link rel="stylesheet" href="~/css/changeName.css?v=1" />
</head>
@using System;
@using CourseTeachCook.Models;
@using System.Collections.Generic;
@using System.Linq;

   
    <div class="right-body col-lg-10">
        <div class="content-body">
            <h4>Đổi mật khẩu</h4>
            @using (var system = new CourseTeachingCookContext())
            {
                Admin admin = system.Admins.Find(1);
                <div class="row" id="head">
                    <div class="col-lg-2">
                        <img src="~/Image/ImageDesign/AdminDesign/@admin.Image" alt="">
                    </div>
                    <form class="col-lg-10" asp-controller="Admin" asp-action="ChangePassword" asp-route-id="@admin.AdminId"
                    method="POST" enctype="multipart/form-data">
                        <div id="content">
                            <div class="row content" id="email">
                                <p class="col-lg-2">Email</p>
                                <p class="col-lg-4 detail">@admin.Email</p>
                            </div>
                            <div class="row content" id="email">
                                <p class="col-lg-2">Mật khẩu cũ</p>
                                <input type="password" name="oldPassword" class="detail"
                                placeholder="Nhập mật khẩu cũ của bạn">
                            </div>
                            <div class="row content" id="email">
                                <p class="col-lg-2">Mật khẩu mới</p>
                                <input type="password" name="newPassword" class="detail"
                                placeholder="Nhập mật khẩu mới của bạn">
                            </div>
                            <div class="row content" id="email">
                                <p class="col-lg-2">Xác nhận</p>
                                <input type="password" name="confirmPassword" class="detail"
                                placeholder="Nhập lại mật khẩu mới">
                            </div>
                            @if (ViewData["result"] != null)
              {
                @if (ViewData["result"].Equals(true))
                {
                  <div class="row content">
                    <p class="col-lg-2"></p>
                    <button class="result col-lg-4 btn btn-success">Đổi mật khẩu thành công</button>
                  </div>
                }
                else
                {
                  <div class="row content">
                    <p class="col-lg-2"></p>
                    <button class="result col-lg-4 btn btn-danger">Đổi mật khẩu thất bại</button>
                  </div>
                }
              }
                            <div class="submitForm">
                                <input type="submit" value="Đổi mật khẩu">
                            </div>
                           
                        </div>
                    </form>
                </div>

            }


        </div>
    </div>
