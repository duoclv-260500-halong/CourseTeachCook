@{
    ViewData["Title"] = "Thông tin cá nhân";
    Layout = "";
}

<head>
    <link rel="stylesheet" href="~/css/printOrder.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6" crossorigin="anonymous">

</head>
@using System;
@using CourseTeachCook.Models;
@using System.Collections.Generic;
@using System.Linq;
@using System.Globalization

<div id="orderPrint">
    <header>
        <div class="row">

            <div class="col-lg-2" id="logo">
                <img src="/Image/ImageDesign/AdminDesign/Logo.png" alt="">

            </div>
            <div class="col-lg-8" id="title1">
                <h4>LỚP HỌC NẤU ĂN EZCOOKING CLASS</h4>
                <p style="margin-bottom: 0px;">Địa chỉ: Hà Nội</p>
                <p>Hotline: @ViewBag.hotline</p>
            </div>

        </div>

    </header>

    <body>
        <h3 id="title">HÓA ĐƠN</h3>
        <div class="row">
            <div class="information col-lg-7">
                <h4 class="title-body">
                    KHÁCH HÀNG
                </h4>
                <div id="infor">
                    @{
                        Orderdetail orderdetail = ViewBag.orderdetail;
                        Customer customer = ViewBag.customer;
                        <p>Họ tên: @customer.CustomerName</p>
                        <p>Điện thoại: @customer.PhoneNumber</p>
                        <p>Địa chỉ: @customer.Address</p>
                        <p>Số tiền: @string.Format(new CultureInfo("vi-VN"),"{0:c}", ((orderdetail.CoursePrice + orderdetail.MaterialPrice) * orderdetail.Quantity))</p>
                        <p>Bằng chữ: @ViewBag.ConvertPriceToString</p>
                    }
                </div>
            </div>
            <div class="information col-lg-5">
                <h4 class="title-body">
                    KHÓA HỌC
                </h4>
                <div id="product">
                    @{  Course course = ViewBag.course;
                        <p>Khóa học: @course.CourseName</p>
                        <p>Giá khóa học: @string.Format(new CultureInfo("vi-VN"),"{0:c}", @course.CoursePrice)</p>
                        <p>Giá nguyên liệu: @string.Format(new CultureInfo("vi-VN"),"{0:c}", @course.MaterialPrice)</p>
                        <p>Số lượng: @ViewBag.quantity</p>
                        <p>Ngày học: @course.DateOfOpening.ToString("dd/MM/yyyy")</p>
                    }
                </div>
            </div>
        </div>
    </body>
    <footer>
        <div class="row" id="footer">
            <div class="col-lg-7">
                <p>-Chú ý: Học phí đã nộp sẽ không được hoàn trả</p>
                <div style="text-align: center; width: 50%">
                    <strong>Học viên</strong>
                    <p>(Ký, họ tên)</p>
                </div>

            </div>

            <div class="col-lg-5" style="text-align: center;">
                <p>Hà Nội, ngày @DateTime.Now.ToString("dd") tháng @DateTime.Now.ToString("MM") năm @DateTime.Now.ToString("yyyy")</p>
                <strong>Đại diện công ty</strong>
                <p>(Ký, họ tên)</p>
            </div>
        </div>

    </footer>
</div>