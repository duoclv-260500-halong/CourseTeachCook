@{
  ViewData["Title"] = "Thông tin cá nhân";
}

<head>
  <link rel="stylesheet" href="~/css/changeName.css?v=5" />
</head>
@using System;
@using CourseTeachCook.Models;
@using System.Collections.Generic;
@using System.Linq;


  <div class="right-body col-lg-10">
    <div class="content-body">
      <h4>Cập nhật số điện thoại</h4>
      @using (var system = new CourseTeachCookContext())
      {
        Admin admin = system.Admins.Find(1);
        <div class="row" id="head">
          <div class="col-lg-2">
            <img src="~/Image/ImageDesign/AdminDesign/@admin.Image" alt="">
          </div>
          <form class="col-lg-10" asp-controller="Admin" asp-action="ChangePhoneNumber" asp-route-id="@admin.AdminId" method="POST"
          enctype="multipart/form-data">
            <div id="content">
              <div class="row content" id="email">
                <p class="col-lg-2">Email</p>
                <p class="col-lg-4 detail">@admin.Email</p>
              </div>
              <div class="row content" id="email">
                <p class="col-lg-2">Số điện thoại</p>
                <input type="text" name="phoneNumber" class="detail" placeholder="Nhập số điện thoại của bạn">

              </div>
              @if (ViewData["result"] != null)
              {
                @if (ViewData["result"].Equals(true))
                {
                  <div class="row content">
                    <p class="col-lg-2"></p>
                    <button class="result col-lg-4 btn btn-success">Đổi số điện thoại thành công</button>
                  </div>
                }
                else
                {
                  <div class="row content">
                    <p class="col-lg-2"></p>
                    <button class="result col-lg-4 btn btn-danger">Đổi số điện thoại thất bại</button>
                  </div>
                }
              }
              <div class="submitForm">
                <input type="submit" value="Lưu thông tin">
              </div>
              
            </div>
          </form>
        </div>

      }


    </div>
  </div>
