@using CourseTeachCook.Models

@{
    ViewData["Title"] = "Home Page";
    Layout = "_LayoutCustomer";
}
<head>

    <link rel="stylesheet" href="~/css/Infor.css?v=1">

</head>

@using (var connect = new CourseTeachCookContext())
{
    Customer customer = ViewBag.customers;

    <div class="main" style="margin-top: 70px">
        <div class="container">
            <div class="row">
                <div id="ctl00_divCenter" class="full-width col-sm-12">
                    <div class="row">
                        <div class="col-md-3 col-sm-4">
                            <section class="user-sidebar clearfix">
                                <div class="userinfo clearfix">
                                    <figure>

                                        <img alt="" src="/Image/ImageDesign/UserImage/@customer.Image" class="avatar user-img" style="width: 80px; height: 80px">
                                        <figcaption>
                                            <div class="title">Tài khoản của</div>
                                            <div class="user-name">@customer.CustomerName

                                            </div>
                                        </figcaption>
                                    </figure>
                                </div>
                                @* <i class="fa fa-angle-down"></i> *@
                            </section>
                            <nav class="user-sidelink clearfix">
                                <ul>

                                    <li class="hvr-sweep-to-right active">
                                        <a asp-controller="Customer" asp-action="Infor"  asp-route-id="@customer.CustomerId"  style="text-decoration: none;"><i class="fa fa-info-circle"></i> Thông tin tài khoản</a>
                                        </li>
                                    <li class="hvr-sweep-to-right"><a asp-controller="Customer" asp-action="ChangePassword" asp-route-id="@customer.CustomerId" style="text-decoration: none;">
                                            <i class="fa fa-lock"></i> Đổi mật khẩu</a></li>
                                    
                                    <li class="hvr-sweep-to-right"><a asp-controller="Customer" asp-action="ViewOrders" asp-route-id="@customer.CustomerId" style="text-decoration: none;">
                                            <i class="fa fa-list-alt"></i> Quản lý đơn hàng</a></li>
                                    <li class="hvr-sweep-to-right">
                                        <a asp-controller="Customer" asp-action="Logout"><i class="fa fa-sign-out"></i>
                                            Thoát</a></li>
                                </ul>
                            </nav>
                        </div>
                        <div class="col-md-9 col-sm-8">
                            <div id="ctl00_mainContent_pnlUser" class="user-page clearfix">

                                <h1 class="postname"> Thông tin tài khoản </h1>

                                <div class="account-info clearfix">
                                    <h2 class="posttitle">Cập nhật thông tin tài khoản</h2>
                                    <div class="account-form clearfix">
                                        <form  asp-controller="Customer" asp-action="ChangeInfor" asp-route-id="@customer.CustomerId" method="POST" enctype="multipart/form-data">
                                                <div class="row">

                                                    <div class="col-sm-9">

                                                        <div class="form-group">
                                                            <label for="ctl00_mainContent_txtEmail" class="control-label">Địa chỉ
                                                                email</label>
                                                            <input name="" type="text" value="@customer.Email"
                                                            id="ctl00_mainContent_txtEmail" disabled="disabled" tabindex="10"
                                                            class="aspNetDisabled form-control">
                                                        
                                                        </div>
            
                                                        <div class="form-group">
                                                            <label for="ctl00_mainContent_txtFirstName"
                                                            class="control-label">Tên</label>
                                                            <input name="name" type="text" value="@customer.CustomerName" maxlength="100"
                                                            id="ctl00_mainContent_txtFirstName" class="form-control">
                                                            @* <span id="ctl00_mainContent_FirstNameRequired" class="error"
                                                                style="display:none;">Vui lòng nhập Tên</span> *@
                                                        </div>

                                                        <div class="form-group">
                                                            <label for="ctl00_mainContent_txtLastName" class="control-label">Số điện
                                                                thoại</label>
                                                            <input name="phoneNumber" type="text" value="@customer.PhoneNumber" maxlength="100"
                                                            id="ctl00_mainContent_txtLastName" class="form-control">
                                                            @* <span id="ctl00_mainContent_LastNameRequired" class="error"
                                                                style="display:none;">Vui lòng nhập Họ</span> *@
                                                        </div>

                                                        <div class="form-group">
                                                            <label for="ctl00_mainContent_ddGender" class="control-label">Địa
                                                                chỉ</label>
                                                            <input name="address" type="text" value="@customer.Address" maxlength="100"
                                                            id="ctl00_mainContent_txtLastName" class="form-control">
                                                            @* <select name="ctl00$mainContent$ddGender"
                                                                id="ctl00_mainContent_ddGender" class="form-control">
                                                                <option value=""></option>
                                                                <option selected="selected" value="M">Nam</option>
                                                                <option value="F">Nữ</option>
                                                                </select> *@
                                                            @* <span id="ctl00_mainContent_GenderRequired" class="error"
                                                                style="display:none;">Vui lòng nhập Giới tính</span> *@
                                                        </div>
                                                    </div>

                                                    <div class="col-sm-3">
                                                            <label class="control-label">Avatar</label>
                                                            <div class="forminput">
                                                                <img alt=""
                                                                src="//st.imageinstant.net/data/siteimages/anonymous.png"
                                                                class="avatar user-img">
                                                                <input type="file" name="imageUser" style="padding: 5px 0;">
                                                            </div>
                                                    </div>
                                                </div>

                                                <div class="button-wrap">
                                                    <input type="submit"name="btnUpdate" value="Cập nhật"
                                                    id="ctl00_mainContent_btnUpdate" class="btn btn-primary">
                                                    </div>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
