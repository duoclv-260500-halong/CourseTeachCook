@{
  ViewData["Title"] = "Thông tin cá nhân";
}

<head>
  <link rel="stylesheet" href="~/css/changeCourse.css?v=1" />
</head>
@using System;
@using CourseTeachCook.Models;
@using System.Collections.Generic;
@using System.Linq;

 
  <div class="right-body col-lg-10">
    <div class="content-body">
      <h4>Cấp lại mật khẩu</h4>
      @using (var system = new CourseTeachCookContext())
      {
        Staff staff= ViewBag.staff;
        <div class="row" id="head">
          
          <form asp-controller="Staff" asp-action="ReissuePassword" onsubmit="return checkPassword()" asp-route-id="@staff.StaffId"
          method="POST" enctype="multipart/form-data">
            <div id="content">
              <div class="row content" id="email">
                <p class="col-lg-2">Nhân viên</p>
                <p class="col-lg-4 detail">@staff.StaffName</p>
              </div>
              <div class="row content" id="email">
                <p class="col-lg-2">Mật khẩu mới</p>
                <input type="password" name="newPassword" class="detail" id="password" placeholder="Nhập mật khẩu mới">
                <span class="col-lg-4 error" id="errorPassword" style="color: red;"></span>
              </div>
              <div class="row content" id="email">
                <p class="col-lg-2">Nhập lại mật khẩu mới</p>
                <input type="password" name="confirmnNewPassword" class="detail" id="passwordConfirm" placeholder="Nhập lại mật khẩu mới">
                <span class="col-lg-4 error" id="errorPasswordConfirm" style="color: red;"></span>
              </div>
              @if (ViewBag.result != null)
              {
                @if (ViewBag.result.Equals(true))
                {
                  <div class="row content">
                    <p class="col-lg-2"></p>
                    <button class="result col-lg-3 btn btn-success">Cấp mật khẩu thành công</button>
                  </div>
                }
                else
                {
                  <div class="row content">
                    <p class="col-lg-2"></p>
                    <button class="result col-lg-3 btn btn-danger">Cấp mật khẩu thất bại</button>
                  </div>
                }
              }
              <div class="submitForm">
                <input type="submit" value="Lưu thông tin">
              </div>

            </div>
          </form>
        </div>

      }


    </div>
  </div>
<script src="~/js/admin/reissuePassword.js?v=2"></script>